#!/usr/bin/env bash

set -Eeo pipefail
IFS=$' \t\n'
trap 'code=$?; Log "${CaptiveLoginPrefix} ${ERROR}Aborting (exit $code)${NoColor}"; exit $code' ERR

# App Version
VERSION="v1.4.3"


############################################################
# Functions                                                #
############################################################

# Disable Terminal Colors/Formatting
DisableStyling() {
    RedColor=""
    GreyColor=""
    YellowColor=""
    GreenColor=""
    BOLD=""
    ITALIC=""
    NoColor=""
    INFO=""
    WARN=""
    ERROR=""
    TailscalePrefix="Tailscale:"
    MullvadPrefix="Mullvad:"
    NodePrefix="Node:"
    VPNPrefix="VPN:"
    CaptiveLoginPrefix="ACP Wrapper:"
}

# Portable Logging Function with Formatting
Log() {
    printf "%b\n" "$1"
}

# Display Help
Help() {
    Log
    Log " Auto Captive Portal — Bash Wrapper"
    Log "------------------------------------"
    Log "This script sets up the environment for auto-captive-portal and"
    Log "allows the user to choose which VPN service to use. It also"
    Log "provides options for enabling/disabling lockdown mode and"
    Log "displaying help or version information."
    Log
    Log "Usage:"
    Log "  captive-login [options]"
    Log
    Log "Options:"
    Log "  -h                Display this help message and exit."
    Log "  -v                Show software version and exit."
    Log "  -s                Skip auto-captive-portal script."
    Log "  -n                Disable terminal colors and formatting."
    Log "  -c <VPN choice>   Select VPN option after running captive login:"
    Log "                       1) Enable Tailscale"
    Log "                       2) Enable Mullvad"
    Log "                       3) Enable Home VPN"
    Log "                       4) Enable Home & Mullvad VPN"
    Log "                       5) Done [Lockdown Mode]"
    Log "                       6) Done [${WARN}Unsecured${NoColor}]"
    Log
    Log "Example:"
    Log "  captive-login -c 4 -s"
    Log
}

# Navigate to the true script directory
NavigateToScriptDirectory() {
    # Portable resolution of the script directory
    # Works when sourced or executed, follows symlinks, avoids readlink -f.
    src="${BASH_SOURCE[0]}"
    while [ -h "$src" ]; do
        dir="$(cd -P -- "$(dirname -- "$src")" && pwd)"
        src="$(readlink -- "$src")" || break
        case "$src" in /*) : ;; *) src="$dir/$src" ;; esac
    done
    script_dir="$(cd -P -- "$(dirname -- "$src")" && pwd)"
    cd "$script_dir" || { Log "${CaptiveLoginPrefix} ${ERROR}Failed to set directory to script location${NoColor}"; exit 1; }
}

# Returns values from package.json
GetPackageValue() {
    local key="$1"
    local value="$(
        if command -v jq >/dev/null 2>&1; then
            jq -r ".${key} // empty" package.json 2>/dev/null
        else
            awk -F\" -v k="$key" '$0 ~ "\""k"\"[[:space:]]*:[[:space:]]*\""{print $4; exit}' package.json 2>/dev/null
        fi
    )"
    printf "${value:-unknown}"
}

# Get App Version
GetVersion() {
    NavigateToScriptDirectory

    local v_js="$(
        if command -v jq >/dev/null 2>&1; then
            jq -r '.version // empty' package.json 2>/dev/null
        else
            awk -F\" '/"version"[[:space:]]*:[[:space:]]*"/{print $4; exit}' package.json 2>/dev/null
        fi
    )"
    printf "${BOLD}${GreyColor}"
    GetPackageValue main
    printf ":${NoColor} v%s\n" "${v_js:-unknown}"
}


############################################################
# Enable VPNs                                              #
############################################################

# Enable Tailscale
EnableTailscale() {
    Log "${TailscalePrefix} Enabling Tailscale..."
    tailscale set --exit-node=oppy && Log "${TailscalePrefix} Set exit-node to \"oppy\""
}

# Enable Mullvad
EnableMullvad() {
    Log "${MullvadPrefix} Enabling Mullvad..."
    mullvad connect --wait && Log "${MullvadPrefix} Connected"
}

# Enable Home VPN
EnableHomeVPN() {
    Log "${VPNPrefix} Enabling Home VPN..."
    if command -v nmcli >/dev/null 2>&1; then
        nmcli connection up "Home VPN" >/dev/null 2>&1 && Log "${VPNPrefix} Enabled Home VPN"
    else
        Log "${VPNPrefix} ${WARN}nmcli not found; skipping Home VPN${NoColor}"
    fi

    # nmcli connection up "Home VPN" > /dev/null 2>&1 && Log "${VPNPrefix} Enabled Home VPN"
}


############################################################
# Disable VPNs                                             #
############################################################

# Disable Tailscale
DisableTailscale() {
    Log "${TailscalePrefix} Disabling Tailscale..."
    tailscale set --exit-node= > /dev/null 2>&1 \
    && Log "${TailscalePrefix} Set exit-node to \"\"" || Log "${TailscalePrefix} ${WARN}Failed to disable Tailscale${NoColor}"
}

# Disable Mullvad
DisableMullvad() {
    Log "${MullvadPrefix} Disconnecting Mullvad..."
    mullvad disconnect --wait > /dev/null && Log "${MullvadPrefix} Disconnected"
}

# Disable Home VPN
DisableHomeVPN() {
    Log "${VPNPrefix} Disconnecting \"Home VPN\"..."
    if command -v nmcli > /dev/null 2>&1; then
        nmcli connection down "Home VPN" > /dev/null 2>&1 \
        && Log "${VPNPrefix} Disabled Home VPN" || Log "${VPNPrefix} ${WARN}Failed to disable \"Home VPN\"${NoColor}"
    else
        Log "${VPNPrefix} ${WARN}nmcli not found; skipping Home VPN${NoColor}"
    fi
}


############################################################
# Enable / Disable Lockdown Mode                           #
############################################################

# Enable Mullvad Lockdown Mode
MullvadEnableLockdown() {
    Log "${MullvadPrefix} Enabling Mullvad lockdown mode..."
    mullvad lockdown-mode set on > /dev/null && Log "${MullvadPrefix} Set lockdown-mode to on"
}

# Disable Mullvad Lockdown Mode
MullvadDisableLockdown() {
    Log "${MullvadPrefix} Disabling Mullvad lockdown mode..."
    mullvad lockdown-mode set off > /dev/null && Log "${MullvadPrefix} Set lockdown-mode to off"
}


# Run Auto Captive Portal
RunAutoCaptiveLogin() {
    local node_bin=""
    if [ -n "${NVM_BIN:-}" ] && [ -x "${NVM_BIN}/node" ]; then
        node_bin="${NVM_BIN}/node"
    elif command -v node >/dev/null 2>&1; then
        node_bin="$(command -v node)"
    else
        node_bin="/home/trfa/.nvm/versions/node/v24.11.1/bin/node"
    fi


    if [ -n "$node_bin" ]; then
        "$node_bin" main.js
    else
        Log "${NodePrefix} ${ERROR}Node.js not found (checked: \${NVM_BIN}/node and PATH)${NoColor}"
    fi
}

# Display VPN Options
SelectVPN() {

    while :; do

        # Display VPN Options
        Log "${CaptiveLoginPrefix} Displaying VPN options"
        Log
        Log "Please enter your choice: "
        Log "  1) Enable Tailscale"
        Log "  2) Enable Mullvad"
        Log "  3) Enable Home VPN"
        Log "  4) Enable Mullvad & Home VPN"
        Log "  5) Done [Lockdown Mode]"
        Log "  6) Done [${WARN}Unsecured${NoColor}]"
        Log

        # Prompt user for choice if not already set by -c option
        # Also exit if no TTY available
        if [ -z "${choice:-}" ]; then
            if [ -t 0 ]; then
                read -n 1 -p "Please enter your choice [1-6]: " choice
            else
                Log "${CaptiveLoginPrefix} ${ERROR}No TTY available to prompt for choice (use -c 1..6)${NoColor}"
                Log "${CaptiveLoginPrefix} ${ERROR}Defaulting to option 5 (Done [Lockdown Mode]) due to lack of TTY${NoColor}"
                choice=5
            fi
        else
            Log "Please enter your choice [1-6]: ${choice}"
        fi
        Log


        case $choice in

            # Enable Tailscale
            1)
                EnableTailscale
                MullvadDisableLockdown
                break
                ;;

            # Enable Mullvad
            2)
                EnableMullvad
                MullvadDisableLockdown
                break
                ;;

            # Enable Home VPN
            3)
                MullvadDisableLockdown
                EnableHomeVPN
                break
                ;;

            # Enable Mullvad & Home VPN
            4)
                EnableMullvad
                MullvadDisableLockdown
                EnableHomeVPN
                break
                ;;

            # Done [Lockdown Mode]
            5)
                Log "${CaptiveLoginPrefix} Done. Keeping lockdown mode on..."
                break
                ;;
            
            # Done [Unsecured]
            6)
                Log "${CaptiveLoginPrefix} Done. Setting lockdown mode to off..."
                MullvadDisableLockdown
                break
                ;;

            # Invalid Option, Prompt Again
            *)
                Log "${ERROR}Invalid option: $choice${NoColor}"
                unset choice
                Log
                ;;
        esac
    done
}


# Disable All VPN Connections
DisableVPN() {
    Log "${CaptiveLoginPrefix} Disabling VPN connections..."
    
    # Reset Tailscale exit-node to none
    DisableTailscale

    # Disconnect from Mullvad
    DisableMullvad

    # Disconnect from Home VPN
    DisableHomeVPN
}

# Setup Known System State
SetupKnownState() {
    Log "${CaptiveLoginPrefix} Setting up known state for auto-captive-portal"

    Log "${CaptiveLoginPrefix} Setting directory to script location"

    # Navigate to the true script directory
    NavigateToScriptDirectory

    # Set Mullvad lockdown mode to on
    MullvadEnableLockdown

    # Disable All VPN Connections
    DisableVPN
}


# If not interactive shell, pause
pause_if_gui_launch() {
    # if [[ $(readlink -f /proc/$(ps -o ppid:1= -p $$)/exe) != $(readlink -f "$SHELL") ]]
    # then
    #     read -s -n 1 -p "Press any key to continue..." && Log
    # fi

    # Never pause if there's no TTY available; avoids hangs.
    [ -t 0 ] || return 0

    # Detect parent program name (robust across bash/zsh).
    # Falls back gracefully if /proc isn’t available (e.g., some BSDs).
    parent_comm="$(
        if command -v ps >/dev/null 2>&1; then
        ps -o comm= -p "${PPID}"
        else
        Log ""
        fi
    )"

    # Common interactive terminal hosts: shells/multiplexers
    if printf '%s\n' "$parent_comm" | grep -Eq '(^|/)(bash|zsh|fish|ksh|tmux|screen)$'; then
        # Launched from a shell → don't pause
        return 0
    fi

    # Otherwise likely a GUI/double-click → pause
    read -s -n 1 -p "Press any key to continue..." && Log
}


############################################################
# Log Formatting                                           #
############################################################
RedColor="\033[0;31m"
GreyColor="\033[38;2;128;128;128m"
YellowColor="\033[0;33m"
GreenColor="\033[0;32m"
BOLD="\033[1m"
ITALIC="\033[3m"
NoColor="\033[0m" # No Color

# Log Levels
INFO="${BOLD}${GreenColor}"
WARN="${BOLD}${YellowColor}"
ERROR="${BOLD}${RedColor}"

# Log Prefixes
# Tailscale
TailscalePrefix="${BOLD}${GreyColor}Tailscale:${NoColor}"

# Mullvad
MullvadPrefix="${BOLD}${GreyColor}Mullvad:${NoColor}"

# Node
NodePrefix="${BOLD}${GreyColor}Node:${NoColor}"

# Home VPN
VPNPrefix="${BOLD}${GreyColor}VPN:${NoColor}"

# Captive Login
CaptiveLoginPrefix="${BOLD}${GreyColor}ACP Wrapper:${NoColor}"

# If Unsupported, Disable Styling
if [ -t 1 ] && [ -n "${TERM:-}" ] && [ "$TERM" != "dumb" ]; then
    : # keep colors
else
    DisableStyling
fi


############################################################
# Options                                                  #
############################################################

# Skip auto-captive-portal if -s option is provided
skipACP=false

while getopts ":hvsnc:" opt; do
  case $opt in

    # Help option
    h)
        Help
        exit 0
        ;;

    # Version option
    v)
        Log "${BOLD}${GreyColor} Auto Captive Portal Version${NoColor}"
        Log "${BOLD}${GreyColor}-----------------------------${NoColor}"
        Log "${BOLD}${GreyColor}Wrapper:${NoColor} ${VERSION}"
        GetVersion
        Log
        exit 0
        ;;

    # Skip auto-captive-portal
    s)
        skipACP=true
        ;;

    # No Terminal Colors/Formatting
    n)
        DisableStyling
        ;;

    # VPN choice
    c)
        choice=$OPTARG
        ;;

    # Invalid option
    \?)
        Log "${ERROR}Unknown option:${NoColor} -${OPTARG}"
        Help
        exit 1
        ;;

    # Missing argument for options that require one
    :) 
        Log "${ERROR}Option -${OPTARG} requires an argument.${NoColor}"
        Help
        exit 1
        ;;

    # Invalid option (catch-all)
    *) 
        Log "${ERROR}Invalid option:${NoColor} -$opt"
        Help
        exit 1
        ;;
  esac
done


############################################################
# Setup Known State                                        #
############################################################

SetupKnownState


############################################################
# Auto Captive Portal                                      #
############################################################

# Check if the user has chosen to skip auto-captive-portal
if $skipACP; then
    Log "${CaptiveLoginPrefix} Skipping auto-captive-portal"
else
    MullvadDisableLockdown

    Log "${NodePrefix} Running auto-captive-portal"

    Log

    # Attempt to run the auto-captive-portal script
    RunAutoCaptiveLogin

    Log
fi

# Set Mullvad lockdown mode to on
MullvadEnableLockdown


############################################################
# Display VPN Options                                      #
############################################################

# Run VPN Select Prompt
SelectVPN

Log "${CaptiveLoginPrefix} Done"


############################################################
# If not interactive shell, pause                          #
############################################################

pause_if_gui_launch
